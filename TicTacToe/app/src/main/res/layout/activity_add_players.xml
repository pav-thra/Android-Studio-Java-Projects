<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AddPlayers">

    <androidx.cardview.widget.CardView
        android:id="@+id/c"
        android:layout_width="320dp"
        android:layout_height="383dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41.5dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="41.5dp"
        android:layout_marginBottom="139dp"
        app:cardBackgroundColor="#20533D3D"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="309dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:orientation="vertical"
            android:padding="24dp">

            <EditText
                android:id="@+id/playerOne"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginTop="40dp"
                android:background="@color/material_dynamic_tertiary0"
                android:drawableLeft="@drawable/x_icon"
                android:drawablePadding="8dp"
                android:hint="Player 1"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHint="#F4F4F4"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/playerTwo"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginTop="40dp"
                android:background="@color/material_dynamic_tertiary0"
                android:drawableLeft="@drawable/o_icon"
                android:drawablePadding="8dp"
                android:hint="Player 2"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHint="#F4F4F4"
                android:textStyle="italic" />

            <Button
                android:id="@+id/startGameButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#5E000000"
                android:text="Start Game"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>